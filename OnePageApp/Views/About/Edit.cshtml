@model EditAboutDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-4">
    <form action="@Url.Action("Edit","About")" method="post">
        <input type="hidden" value="@Model.AboutId" name="AboutId" />
        <div class="mt-2">
            <label>Title</label>
            <input type="text" class="form-control" name="Title" value="@Model.Title" />
        </div>
        <div class="mt-2">
            <label>Description</label>
            <input type="text" class="form-control" name="Description" value="@Model.Description" />
        </div>
        <div class="mt-2">
            <label>Button Text</label>
            <input type="text" class="form-control" name="ButtonText" value="@Model.ButtonText" />
        </div>
        <div class="mt-2">
            <input type="submit" class="btn btn-success" value="Edit" />
        </div>
    </form>
</div>

